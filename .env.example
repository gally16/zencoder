# ===========================================
# Zencoder2API 环境变量配置
# ===========================================

# 服务配置
PORT=7860
DEBUG=false

# ===========================================
# 数据库配置 (三选一)
# ===========================================

# --- SQLite (默认，无需额外配置) ---
DB_TYPE=sqlite
DB_PATH=data.db

# --- PostgreSQL ---
# DB_TYPE=postgres
# DATABASE_URL=postgres://username:password@host:5432/dbname?sslmode=disable

# --- MySQL ---
# DB_TYPE=mysql
# DATABASE_URL=username:password@tcp(host:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local

# ===========================================
# 认证配置
# ===========================================

# API 访问密钥 (留空则无需验证)
AUTH_TOKEN=your_secret_token_here

# 管理面板密码
ADMIN_PASSWORD=your_admin_password_here

# ===========================================
# 代理配置 (可选)
# ===========================================

# SOCKS5 代理池，逗号分隔
# 格式: socks5://host:port:username:password
SOCKS_PROXY_POOL=
